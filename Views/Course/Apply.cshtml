@model Candidate

<div class="display-6">
    Apply
</div>
<form asp-action="Apply" method="post">
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <div class="form-group my-2">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" type="email">
    </div>

    <div class="form-group my-2">
    <label asp-for="FirstName" for=""></label>
    <input class="form-control" type="text" asp-for="FirstName">
    </div>

    <div class="form-group my-2">
    <label asp-for="LastName" for=""></label>
    <input asp-for="LastName" class="form-control" type="text">
    </div>

    <div class="form-group my-2">
    <label asp-for="Age"></label>
    <select asp-for="Age" class="form-control">
        <option value="18">18</option>
        <option value="19">19</option>
        <option value="20">20</option>
        <option value="21">21</option>
        <option value="22">22</option>
        <option value="23">23</option>
    </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" checked value="ASP.NET Core MVC" />
            <label for="">ASP.Net Core MVC</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
            <label for="">ASP.Net Core API</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Blazor" />
            <label for="">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-success" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>